# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and update the values
# ========================================

# Spring Profile (dev/prod/test)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clinic
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Server Configuration
SERVER_PORT=8000

# Hibernate Configuration
HIBERNATE_DDL_AUTO=update
SHOW_SQL=true
SQL_INIT_MODE=always

# Logging Levels (DEBUG/INFO/WARN/ERROR)
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_BINDER=TRACE
LOG_LEVEL_JPA=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_APP=DEBUG

# JWT Configuration
# Generate a secure random string (64 characters hex recommended)
# Method 1: openssl rand -hex 32
# Method 2: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Method 3: -join ((48..57) + (65..70) | Get-Random -Count 64 | % {[char]$_})
JWT_SECRET=generate_your_jwt_secret_here
JWT_EXPIRATION=3600000
